{
  "useWorkspaces": true,
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "dev",
        "next"
      ],
      "changelogPreset": "conventional-changelog-conventionalcommits",
      "conventionalCommits": true,
      "message": "chore: release"
    },
    "version": {
      "push": true
    }
  },
  "version": "independent",
  "changelog": {
    "repo": "https://github.com/vuetifyjs/vue-cli-plugins",
    "cacheDir": ".changelog"
  }
}
